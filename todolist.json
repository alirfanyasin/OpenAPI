{
    "openapi":"3.0.2",
    "info": {
      "title":"Todolist",
      "description": "Membuat documentation API menggunakan Open API",
      "version":"1.0",
      "contact": {
        "name": "Irfan Yasin",
        "email": "irfanyasin37@gmail.com",
        "url": "https://github.com/alirfanyasin"
      },
      "license": {
        "name": "APACHE 2.0",
        "url": "https://apace.com"
      }
    },
    "servers": [
      {
        "description": "Todolist RESTful API Server",
        "url": "https://{env}.nameserver.test/api/v1",
        "variables": {
          "env": {
            "description": "Server environment",
            "default" : "dev",
            "enum" : ["dev", "prod"]
          }
        }
      }
    ],
    "externalDocs": {
      "description": "Github",
      "url": "https://github.com/alirfanyasin"
    },
    "paths": {
      "/todolist" : {

        "get" : {
          "summary": "Get All Todolist",
          "description": "Get all data todolist in database",
          "parameters": [
            {
              "name": "include_done",
              "in": "query",
              "required": false,
              "description": "Is include done todolist",
              "schema" : {
                "type": "boolean",
                "nullable": true,
                "default" : false
              }
            },
            {
              "name": "name",
              "in": "query",
              "required": false,
              "description": "Filter by name",
              "schema" : {
                "type": "string", 
                "default" : "Irfan Yasin",
                "nullable": true,
                "minLength": 1,
                "maxLength": 100
              }

            }
          ],
          "responses": {}
        },
        "post" : {
          "summary": "Create New Todolist",
          "description": "Create new todolist to database",
          "requestBody" : {
            "required": true,
            "content": {
              "application/json" : {
                "schema" : {
                  "type": "object",
                  "properties": {
                    "name" : {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "priority" : {
                      "type": "integer",
                      "format": "int32",
                      "default" : 1
                    },
                    "tags" : {
                      "type": "array",
                      "minItems": 1,
                      "items" : {
                          "type": "string",
                          "minLength": 1
                      }
                    }
                  }
                }
              }
            }
          },
          "responses": {}
        }
      }, 
      "/todolist/{todolistId}" : {
        "put" : {
          "summary": "Update Todolist",
          "description": "Update todolist by id to database",
          "parameters": [
            {
              "name": "todolistId",
              "in": "path",
              "required": true,
              "description": "todolist update by id",
              "schema" : {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              }
            }
          ],
          "requestBody" : {
            "required": true,
            "content": {
              "application/json" : {
                "schema" : {
                  "type": "object",
                  "properties": {
                    "name" : {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "priority" : {
                      "type": "number",
                      "format": "int32",
                      "default" : 1
                    },
                    "tags" : {
                      "type": "array",
                      "minItems": 1,
                      "items" : {
                          "type": "string",
                          "minLength": 1
                      }
                    }
                  }
                }
              }
            }
          },
          "responses": {}
        },
        "delete" : {
          "summary": "Delete Todolist",
          "description": "Delete todolist by id to database",
          "parameters": [
            {
              "name": "todolistId",
              "in": "path",
              "required": true,
              "description": "todolist delete by id",
              "schema" : {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              }
            }
          ],
          "responses": {}
        }
      }

    }
  }