    "servers": [
      {
        "description": "Todolist RESTful API Server",
        "url": "https://{env}.nameserver.test/api/v1",
        "variables": {
          "env": {
            "description": "Server environment",
            "default" : "dev",
            "enum" : ["dev", "prod"]
          }
        }
      }
    ],
    "externalDocs": {
      "description": "Github",
      "url": "https://github.com/alirfanyasin"
    },
    "paths": {
      "/todolist" : {

        "get" : {
          "summary": "Get All Todolist",
          "description": "Get all data todolist in database",
          "parameters": [
            {
              "name": "include_done",
              "in": "query",
              "required": false,
              "description": "Is include done todolist",
              "schema" : {
                "type": "boolean",
                "nullable": true,
                "default" : false
              }
            },
            {
              "name": "name",
              "in": "query",
              "required": false,
              "description": "Search todolist by name",
              "schema" : {
                "type": "string", 
                "nullable": true,
                "minLength": 1,
                "maxLength": 100
              },
              "examples": {
                "java" : {
                  "description": "Example name java",
                  "value" : "java"
                },
                "php" : {
                  "description": "Example name php",
                  "value" : "php"
                },
                "JavaScript" : {
                  "description": "Example name JavaScript",
                  "value" : "JavaScript"
                }
              }

            }
          ],
          "responses": {}
        },
        "post" : {
          "summary": "Create New Todolist",
          "description": "Create new todolist to database",
          "requestBody" : {
            "required": true,
            "content": {
              "application/json" : {
                "schema" : {
                  "type": "object",
                  "properties": {
                    "name" : {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "priority" : {
                      "type": "integer",
                      "format": "int32",
                      "default" : 1
                    },
                    "tags" : {
                      "type": "array",
                      "minItems": 1,
                      "items" : {
                          "type": "string",
                          "minLength": 1
                      }
                    }
                  }
                },
                "examples": {
                  "java" : {
                    "description": "Example create todolist Java",
                    "value" : {
                      "name" : "Java",
                      "priority" : 2,
                      "tags" : [
                        "Java", "Progarmming"
                      ]
                    }
                  },
                  "PHP" : {
                    "description": "Example create todolist PHP",
                    "value" : {
                      "name" : "PHP",
                      "priority" : 4, 
                      "tags" : ["PHP", "Hypertext Preprocessor", "Progarmming"]
                    }
                  }
                }
              }
            }
          },
          "responses": {}
        }
      }, 
      "/todolist/{todolistId}" : {
        "put" : {
          "summary": "Update Todolist",
          "description": "Update todolist by id to database",
          "parameters": [
            {
              "name": "todolistId",
              "in": "path",
              "required": true,
              "description": "todolist update by id",
              "schema" : {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "examples": {
                "java" : {
                  "description": "Sample todolist id for java",
                  "value" : "1"
                },
                "php" : {
                  "description": "Sample todolist id for php",
                  "value" : "2"
                }
              }
            }
          ],
          "requestBody" : {
            "required": true,
            "content": {
              "application/json" : {
                "schema" : {
                  "type": "object",
                  "properties": {
                    "name" : {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "priority" : {
                      "type": "number",
                      "format": "int32",
                      "default" : 1
                    },
                    "tags" : {
                      "type": "array",
                      "minItems": 1,
                      "items" : {
                          "type": "string",
                          "minLength": 1
                      }
                    }
                  }
                },
                "examples": {
                  "java" : {
                    "description": "Example create todolist Java",
                    "value" : {
                      "name" : "Java",
                      "priority" : 2,
                      "tags" : [
                        "Java", "Progarmming"
                      ]
                    }
                  },
                  "PHP" : {
                    "description": "Example create todolist PHP",
                    "value" : {
                      "name" : "PHP",
                      "priority" : 4, 
                      "tags" : ["PHP", "Hypertext Preprocessor", "Progarmming"]
                    }
                  }
                }
              }
            }
          },
          "responses": {}
        },
        "delete" : {
          "summary": "Delete Todolist",
          "description": "Delete todolist by id to database",
          "parameters": [
            {
              "name": "todolistId",
              "in": "path",
              "required": true,
              "description": "todolist delete by id",
              "schema" : {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              }
            }
          ],
          "responses": {}
        }
      }

    }
  }